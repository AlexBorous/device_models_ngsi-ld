{
  "$schema": "http://json-schema.org/schema#",
  "$id": "urn:ngsi-ld:ModelSchema:modelschema-9679adb7-asd321412assd",
  "title": "Device entity",
  "definitions": {
    "Device": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": {
          "type": "string",
          "format": "uri"
        },
        "type": {
          "type": "string",
          "enum": ["Device"],
          "description": "Property. NGSI Entity type. It has to be Device."
        },
        "name": {
          "type": "string"
        },
        "controlledObservation": {
          "type": "array"
        },
        "observations": {
          "type": "array"
        }
      }
    },
    "Observation": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": {
          "type": "string",
          "format": "uri"
        },
        "type": {
          "type": "string",
          "enum": ["Observation"],
          "description": "Property. NGSI Entity type. It has to be Observation."
        },
        "name": {
          "type": "string"
        },
        "category": {
          "type": "string"
        },
        "dateModified": {
          "@type": "DateTime"
        },
        "measurement": {
          "type": "number"
        },
        "measurementType": {
          "type": "string"
        }
      }
    },
    "Bin": {
      "type": "object",
      "required": ["id", "type", "relativePosition"],
      "properties": {
        "id": {
          "type": "string",
          "format": "uri"
        },
        "type": {
          "type": "string",
          "enum": ["Device"],
          "description": "Property. NGSI Entity type. It has to be Bin."
        },
        "name": {
          "type": "string"
        },
        "binCapacity": {
          "type": "number"
        },
        "binClearedTime": {
          "@type": "DateTime"
        },
        "binCategory": {
          "type": "string"
        },
        "binFillingLevel": {
          "type": "number"
        },
        "binRecommendedLoad": {
          "type": "number"
        },
        "binFull": {
          "type": "boolean"
        },
        "status": {
          "type": "string"
        },
        "storedItems": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "inSpace": {
          "type": "string"
        },
        "storedWasteKind": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "actuationDevices": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "observationDevices": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "relativePosition": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "Polygon",
                "Point",
                "LineString",
                "MultiLineString",
                "Trimesh"
              ]
            },
            "measurementUnit": {
              "type": "string",
              "default": "m"
            },
            "Dimensions": {
              "type": "string",
              "enum": ["2D", "3D"],
              "default": "2D"
            },
            "coordinates": {
              "type": "array"
            },
            "faces": {
              "type": "array"
            }
          }
        }
      }
    }
  }
}
